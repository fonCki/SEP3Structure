@using Entities.Model
<main class="main">
    <CascadingValue Value="User">
            @if (User!=null) {
                <HeaderRight/>
            }
    </CascadingValue>
    <CascadingValue Value="Chat">
        @if (Chat != null) {
            <MessageArea/>
            <InputArea/>
        }
    </CascadingValue>


</main>

@code {
    [Parameter] public User User { get; set; }
    [Parameter] public Chat Chat { get; set; }
    
}


